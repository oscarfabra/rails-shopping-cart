<!DOCTYPE html>
<html>
<head>
  <title>Rails Depot App</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body class="<%= controller.controller_name %>">
  <div id="banner">
    <p class="locale">
      <%= link_to_unless I18n.locale == :en, "English", locale: :en %>
      |
      <%= link_to_unless I18n.locale == :es, "Espa&ntilde;ol".html_safe, locale: :es %>
    </p>
    <%= link_to image_tag("logo.png", id:"logo_image"), store_path %>
    <%= @page_title || t('.title_html') %>
  </div>
  <div id="columns">
    <div id="side">
      <div id="cart">
        <% if @cart %>
          <%= hidden_div_if @cart.line_items.empty?, id: 'cart' do %>
            <%= render @cart %>
          <% end %>
        <% end %>
      </div>
      <ul>
        <li><a href="<%= store_path %>"><%= t('.home') %></a></li>
        <li><a href="#"><%= t('.questions') %></a></li>
        <li><a href="#"><%= t('.news') %></a></li>
        <li><a href="#"><%= t('.contact') %></a></li>
      </ul>
      <!-- Displays administrative options if admin logged in. -->
      <% if session[:user_id] %>
        <ul>
          <li><%= link_to 'Orders', orders_path %></li>
          <li><%= link_to 'Products', products_path %></li>
          <li><%= link_to 'Users', users_path %></li>
        </ul>
        <%= button_to 'Logout', logout_path, method: :delete %>
      <% end %>
    </div>
    <div id="main">
      <%= yield %>
    </div>
  </div>
</body>
</html>
