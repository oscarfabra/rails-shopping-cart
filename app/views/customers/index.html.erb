<h1>Listing all customers</h1>

<!-- Display notices. -->
<% if notice %>
  <p id="notice"><%= notice %></p>
<% end %>

<table class="customers_table">
  <thead>
    <tr class="<%= cycle('list_line_odd', 'list_line_even') %>">
      <th>ID</th>
      <th>Email</th>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Admin</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @customers.each do |customer| %>
      <tr class="<%= cycle('list_line_odd', 'list_line_even') %>">
        <td><%= customer.id %></td>
        <td><%= customer.email %></td>
        <td><%= customer.firstname %></td>
        <td><%= customer.lastname %></td>
        <td><%= (is_admin?(customer.id))? "Yes" : "No" %></td>
        <td><%= link_to 'Show', customer %></td>
        <td><%= link_to 'Edit', edit_customer_path(customer) %></td>
        <td><%= link_to 'Remove', customer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

