<!-- Displays cart table. -->
<h2><%= t('.title') %></h2>
<table>
  <%= render cart.line_items %>

  <tr class="total_line">
    <td id="update_qty">&nbsp;</td>
    <td id="side_qty">&nbsp;</td>
    <td>Total</td>
    <td class="total_cell"><%= number_to_currency(number_to_locale(cart.total_price)) %></td>
  </tr>
</table>

<%= button_to t('.checkout'), new_order_path, { disabled: @chk_disabled, method: :get } %>
<%= button_to t('.empty'), cart, method: :delete,
              data: { confirm: 'Are you sure?' }, remote: true %>